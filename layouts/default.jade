doctype html
html
  head
    block head
      title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name="csrf-token", content="#{token}")
    link(rel='stylesheet', href='/layouts/core.min.css?#{cacheBreaker}')
    block neck
  body
    div.navbar.navbar-default.navbar-fixed-top
      div.container
        div.navbar-header
          a.navbar-brand(href='/')
            img.navbar-logo(src='/media/logo-symbol-64x64.png', alt='Logo')
            span.navbar-brand-label #{projectName}
          button.navbar-toggle.collapsed(data-toggle='collapse', data-target='.my-navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        div.navbar-collapse.my-navbar-collapse.collapse
          ul.nav.navbar-nav
            li: a(href='/') Inicio
            li: a(href='/contact/') Contactar
          ul.nav.navbar-nav.navbar-right
            if user && user.username
              li: a(href='#{user.defaultReturnUrl}')
                i.fa.fa-user
                |  #{user.username}
            else
              li: a(href='/login/')
                i.fa.fa-user
                |  Iniciar Sesi√≥n
    div.page
      div.container
        block body

    div.footer
      div.container
        span.copyright.pull-right
          |&#169; #{copyrightYear} #{copyrightName}
        ul.links
          li: a(href='/') Inicio
          li: a(href='/contact/') Contactar
        div.clearfix

    div.ajax-spinner
      img(src='/media/ajax-pulse.gif', alt='Cargando...')

    //if lte IE 9
    script(src='/layouts/core.min.js?#{cacheBreaker}')
    script(src='/layouts/ie-sucks.min.js?#{cacheBreaker}')
    script(src='/views/js/jquery.form.js')
    script(src='/views/js/jquery.min.js')

    block feet
