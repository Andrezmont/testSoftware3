extends ../../layouts/admin

block head
  title Registrarse

block neck
  link(rel='stylesheet', href='/views/signup/index.min.css?#{cacheBreaker}')

block feet
  script(src='/layouts/core.min.js?#{cacheBreaker}')
  script(src='/layouts/ie-sucks.min.js?#{cacheBreaker}')
  script(src='/views/signup/index.min.js?#{cacheBreaker}')
  script(src='/js/cargue.js')
  
block body
  div.col-sm-11
  .col-lg-12
    .box
      div.page-header
        h1 Registrarse
      div#signup
      

  script(type='text/template', id='tmpl-signup')
    form
      div.alerts
        |<% _.each(errors, function(err) { %>
        div.alert.alert-danger.alert-dismissable
          button.close(type='button', data-dismiss='alert') &times;
          |<%- err %>
        |<% }); %>
      div.form-group(class!='<%- errfor.username ? "has-error" : "" %>')
        label Nick:
        input.form-control(type='text', name='username', value!='<%= username %>')
        span.help-block <%- errfor.username %>
      div.form-group(class!='<%- errfor.email ? "has-error" : "" %>')
        label Correo:
        input.form-control(type='text', name='email', value!='<%= email %>')
        span.help-block <%- errfor.email %>
      div.form-group(class!='<%- errfor.password ? "has-error" : "" %>')
        label Empresa:
        select.form-control(type='text', name='empresa', value!='<%= empresa %>')
          - for (var i = 0; i < data.length; i++){
            option(value="#{data[i].id}") #{data[i].Nombre}
          -}
        span.help-block <%- errfor.empresa %>
      div.form-group(class!='<%- errfor.password ? "has-error" : "" %>')
        label Contrase√±a:
        input.form-control(type='password', name='password', value!='<%= password %>')
        span.help-block <%- errfor.password %>
        span.help-block <%- errfor.password %>
      div.form-group
        button.btn.btn-primary.btn-signup(type='button') Crear Cuenta
